<Window x:Class="KilnSolver.UI.KilnSolutionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KilnSolver.UI"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Title="Generated Solution">
    <DockPanel LastChildFill="true">
        <ui:SimpleStackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5" Spacing="5">
            <Button Content="Print"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="Print"/>
        </ui:SimpleStackPanel>
        <FlowDocumentReader>
            <FlowDocument x:Name="ResultDocument" />
        </FlowDocumentReader>
    </DockPanel>
</Window>
